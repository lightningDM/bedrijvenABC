<!DOCTYPE html>
<html>
<head>
  <title>Bedrijvenabc</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<%= link_to image_tag("../images/logo.png", :alt=>"BedrijfsABC", :id=>"logo", :border=>0), root_path %>
<div id="content">
    <div id="nav">
        <div id="zoeken"><%= link_to image_tag("../images/search_icon.png", :id=>"zoekenMenuButton", :border=>0), search_path %>
            <p id="zoekenMenuTekst"><%= link_to 'Zoeken', search_path %></p>
        </div>
        
        <div id="registreren"><%= link_to image_tag("../images/user-group-icon.png", :id=>"registrerenMenuButton", :border=>0), new_company_registration_path %>
            <p id="registrerenMenuTekst"><%= link_to 'Bedrijf registreren', new_company_registration_path %></p>
        </div>

      <% if current_company==nil %>
        <div id="inloggen">
			<%= link_to image_tag("../images/lock-icon.png", :id=>"inloggenMenuButton", :border=>0), new_company_session_path %>
            <p id="inloggenMenuTekst"><%= link_to 'Inloggen', new_company_session_path %></p>
        </div>
       <% else %>
         <div id="inloggen">
          
			<%= link_to image_tag("../images/lock-icon.png", :id=>"inloggenMenuButton", :border=>0),"/log_out" %>
            <p id="inloggenMenuTekst"><%= link_to 'uitloggen',"log/out" %></p>
        </div>
          <%end%>
        <div id="contact"><%= link_to image_tag("../images/Sent-Mail-icon.png", :id=>"contactMenuButton", :border=>0), contact_path %>
            <p id="contactMenuTekst"><%= link_to 'Contact', contact_path %></p></div>
    </div>

<%= yield %>

</body>
</html>
